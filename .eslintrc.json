{
	"env": {
		"commonjs": true,
		"es2020": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:security/recommended",
		"plugin:node/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 11
	},
	"plugins": [
		"security"
	],
	"rules": {
		"no-process-exit": "off"
	}
}